left: 5%;											/* 5% gap along left */
width: 85%;											/* 85% wide*/
height: 80%;										/* 80% height*/
border: solid 0.5em #F2EFEB;						/* cream slim solid border*/
background-color: white;							/* white in colour*/
z-index:1002;										/* sets the stack order (below white) */
overflow: hidden;									/* hidden element overflow*/
}

